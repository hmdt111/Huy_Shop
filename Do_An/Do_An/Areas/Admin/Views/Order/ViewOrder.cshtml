@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Order Details";
    decimal total = 0;
    decimal subtotal = 0;
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Order Details</title>
    </head>
    <body>
        <h3>DANH SÁCH ĐƠN HÀNG</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Order Code</th>
                    <th>Username</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>

                    @*  <th scope="col">Manage</th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    subtotal = item.Quantity * item.Price;
                    total += subtotal;

                    <tr>
                        <input type="hidden" asp-for="@item.OrderCode" class="getId" />
                        <td>@item.Id</td>
                        <td>@item.OrderCode</td>
                        <td>@item.UserName</td>
                        <td>@item.Product.Name</td>
                        <td>@item.Price.ToString("#,##0 VNĐ")</td>
                        <td>@item.Quantity</td>
                        <td>@subtotal.ToString("#,##0 VNĐ")</td>


                   


                    </tr>

                }
                <tr>
                    <th colspan="1">Total : </th>
                    <td colspan="5">@total.ToString("#,##0 VNĐ")</td>
                    <td>
                        <select class="form-control select-update-order">
                            
                            <option value="1">Đơn hàng mới</option>
                            <option value="0">Đã xử lý</option>
                        </select>
                    </td>
                </tr>

            </tbody>
        </table>
    </body>
</html>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('.select-update-order').change(function () {
                var status = $(this).val();
                var ordercode = $('.getId').val();
                
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateOrder")",
                    data: { status: status, ordercode: ordercode },

                    success: function (result) {
                        if (result.success) {
                            // console.log("Cập nhật thành công");
                            Swal.fire("Cập nhật đơn hàng thành công");
                        } else {
                            
                            Swal.fire("Cập nhật đơn hàng thất bại : " + result.message);
                        }
                    },
                    error: function (req, status, error){
                        console.error("Lỗi khi cập nhật : ", error);
                    }

                });
            });
        });
    </script>
}


