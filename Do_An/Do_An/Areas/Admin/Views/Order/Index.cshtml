
@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Order Listed";
}

<h3>DANH SÁCH ĐƠN HÀNG</h3>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order Code</th>
            <th scope="col">Username</th>
            <th scope="col">Order Date</th>
            <th scope="col">Status</th>
            <th scope="col">Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <th scope="row">@item.Id</th>
                <td>@item.OrderCode</td>
                <td>@item.UserName</td>
                <td>@item.CreatedDate</td>
               
                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else
                    {
                        <span class="text text-danger">Đã xử lý</span>
                    }
                </td>
                <td>
                    <a asp-action="ViewOrder" asp-controller="Order" asp-route-orderCode="@item.OrderCode" class="btn btn-warning btn-sm">Xem đơn hàng</a>
                    <a asp-action="Delete" asp-controller="Order" asp-route-Id="@item.Id" class="btn btn-danger btn-sm confirmDeletion">Xóa</a>
                </td>


            </tr>

        }


    </tbody>
</table>
