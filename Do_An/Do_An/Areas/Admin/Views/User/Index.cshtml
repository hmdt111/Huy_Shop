@{
    ViewData["title"] = "User Listed";
}

<h3>DANH SÁCH NGƯỜI DÙNG</h3>
@* <a asp-action="Create" asp-controller="User" class="btn btn-primary">Thêm Người Dùng</a>
 *@<table class="table" id="myTable">
    <thead>
        <tr>
           @*  <th scope="col">Id</th> *@
            <th scope="col">UserName</th>
            <th scope="col">Email</th>
           @*  <th scope="col">PasswordHash</th> *@
            <th scope="col">Phone</th>
            <th scope="col">Role</th>
            <th scope="col">Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usersWithRoles in Model)
        {
            <tr>

               @*  <td>@user.Id</td> *@
                <td>@usersWithRoles.User.UserName</td>
                <td>@usersWithRoles.User.Email</td>
                <td>@usersWithRoles.User.PhoneNumber</td>
                <td>@usersWithRoles.RoleName</td>
                @* <td>@user.PasswordHash</td> *@
                
                
                <td>
                    <a asp-action="Edit" asp-controller="User" asp-route-Id="@usersWithRoles.User.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-controller="User" asp-route-Id="@usersWithRoles.User.Id" class="btn btn-danger btn-sm confirmDeletion">Xóa</a>
                </td>


            </tr>

        }


    </tbody>
</table>
