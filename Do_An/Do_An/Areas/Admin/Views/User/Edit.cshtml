@model AppUserModel
@{
    ViewData["title"] = "Edit User";
}
<h2>Sửa Người Dùng</h2>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Tên Người Dùng</label>
            <input asp-for="UserName" required class="form-control" />
            <span asp-validation-for="UserName" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" required class="form-control" />
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Số Điện Thoại</label>
            <input asp-for="PhoneNumber" required class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Mật Khẩu</label>
            <input asp-for="PasswordHash" readonly required class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Roles</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
            </select>
            <span asp-validation-for="RoleId" class="text-danger" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Cập Nhật</button>
        </div>
    </form>
    <a asp-action="Index" class="btn btn-danger">Quay Lại</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}


