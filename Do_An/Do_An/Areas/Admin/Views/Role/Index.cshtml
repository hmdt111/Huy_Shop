<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3 class="text-center">DANH SÁCH ROLE</h3>
    <a asp-action="Create" asp-controller="Role" class="btn btn-warning">Thêm Role</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
               
                <th scope="col">Manage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <th>@item.Id</th>
                    <td>@item.Name</td>
                    
                    <td>
                        <a asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id" class="btn btn-danger btn-sm confirmDeletion">Xóa</a>
                    </td>


                </tr>

            }


        </tbody>
    </table>
  @*   <partial name="_paging" model="@pager" /> *@
</body>
</html>


